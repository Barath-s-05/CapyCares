# Environment variables for CapyCares Backend
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=5000

# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_atlas_connection_string_here

# JWT Secret - should be a long random string (at least 32 characters)
JWT_SECRET=your_very_secure_random_jwt_secret_here_min_32_characters

# GROQ API Key for AI chat functionality
# Get one from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here